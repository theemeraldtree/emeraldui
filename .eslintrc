// TODO: These custom configurations are annoying; they should be a custom ESLint config
{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  // airbnb/javascript is ok but i kind of don't like these rules so i turn them off
  // also sometimes there's collisions with prettier
  "rules": {
    "arrow-parens": "off",
    "indent": "off",
    "operator-linebreak": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "object-curly-newline": "off",
    "react/jsx-one-expression-per-line": "off",
    "comma-dangle": "off",
    "max-len": "off",
    "one-var-declaration-per-line": "off",
    "one-var": "off",
    "implicit-arrow-linebreak": "off",
    "react/forbid-prop-types": "off",
    "react/destructuring-assignment": "off",
    "react/require-default-props": "off",
    "react/no-unescaped-entities": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-curly-newline": "off",
    "react/no-danger": "off",
    "import/no-cycle": "off",
    "no-async-promise-executor": "off",
    "prefer-destructuring": "off",
    "no-plusplus": "off",
    "radix": "off",
    "function-paren-newline": "off",
    "no-console": "off",
    "linebreak-style": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  }
}